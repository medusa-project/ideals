-# N.B.: this template must be kept aligned with institutions/_show_vocabularies_tab

- provide :body_id, "vocabularies"
- provide :title, "Vocabularies"

= hidden_field_tag :institution_id, current_institution.id

-if policy(Vocabulary).new?
  .btn-group.float-end{role: "group"}
    -# Add button
    %button.btn.btn-light.add-vocabulary{"data-bs-target": "#add-vocabulary-modal",
                                         "data-bs-toggle": "modal",
                                         type:             "button"}
      %i.fa.fa-plus
      Add Vocabulary

%h1 Vocabularies

#vocabularies-list
  = render partial: "vocabularies"

= render partial: "shared/xhr_modal",
         locals: { id: "add-vocabulary-modal", title: "Add Vocabulary" }