.btn-group.float-end{role: "group"}
  -# Add Profile button
  %button.btn.btn-light.add-metadata-profile{"data-bs-target": "#add-metadata-profile-modal",
                                             "data-bs-toggle": "modal",
                                             type:             "button"}
    %i.fa.fa-plus
    Add Profile

%table.table
  %thead
    %tr
      %th Name
  %tbody
    - @profiles.each do |profile|
      %tr
        %td
          = link_to(profile.name, profile)
          - if profile.institution_default
            %span.badge.text-bg-success DEFAULT

= render partial: "shared/ajax_modal",
         locals: { id: "add-metadata-profile-modal", title: "Add Metadata Profile" }

