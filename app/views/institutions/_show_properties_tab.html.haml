.btn-group.float-right{role: "group"}
  - if policy(@institution).edit?
    -# Edit button
    %button.btn.btn-light.edit-institution{"data-target":          "#edit-institution-modal",
                                           "data-toggle":          "modal",
                                           type:                   "button",
                                           "data-institution-key": @institution.key }
      %i.fa.fa-pencil-alt
      Edit

.clearfix.mb-3

%dl
  %dt Service Name
  %dd= @institution.service_name
  %dt Key
  %dd
    %code= @institution.key
  %dt Fully Qualified Domain Name (FQDN)
  %dd
    %code= link_to(@institution.fqdn, @institution.url)
  %dt Organization DN
  %dd
    %code= @institution.org_dn
  %dt Main Website URL
  %dd
    - if @institution.main_website_url
      = link_to(@institution.main_website_url, @institution.main_website_url)
    - else
      Not Set
  %dt Copyright Notice
  %dd
    - if @institution.copyright_notice
      = @institution.copyright_notice
    - else
      .badge.badge-danger
        Not Set
  %dt Feedback Email
  %dd
    - if @institution.feedback_email
      = @institution.feedback_email
    - else
      .badge.badge-danger
        Not Set
  %dt Default
  %dd= boolean(@institution.default, style: :word)
