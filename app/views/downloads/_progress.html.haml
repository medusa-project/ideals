%p
  A .zip file is being prepared now. When it's ready, a download button will
  appear below.
- if !@download.task || @download.task.indeterminate
  .progress
    .progress-bar.progress-bar-striped.progress-bar-animated.bg-info{"aria-valuemax": "100",
                                                                     "aria-valuemin": "0",
                                                                     "aria-valuenow": "100",
                                                                     role: "progressbar",
                                                                     style: "width: 100%"}
- elsif @download.task.failed?
  %p There was an error generating the download.
- else
  - percent = (@download.task.percent_complete * 100).round
  .progress
    .progress-bar.progress-bar-striped.progress-bar-animated.bg-info{"aria-valuemax": "100",
                                                                     "aria-valuemin": "0",
                                                                     "aria-valuenow": percent,
                                                                     role: "progressbar",
                                                                     style: "width: #{percent}%"}
      %span.sr-only
        = percent
        \% complete
  %p.text-center
    = "#{percent}%"
