-# @param user_group [UserGroup]

= form_for(user_group, remote: true) do |f|
  .error-messages
    -# populated via ajax by shared/_validation_messages.js.erb

  .alert.alert-light
    %i.fa.fa-info-circle
    = raw("Department names must match their names in the #{link_to("Campus Directory", "https://directory.illinois.edu/search")}.")

  = hidden_field_tag "user_group[departments][]"
  - departments = f.object.departments
  - departments = [Department.new] if departments.empty?
  - departments.each do |department|
    .input-group.mb-3
      = text_field_tag "user_group[departments][]", department.name,
                       class: "form-control"
      %button.btn.btn-outline-danger.remove{type: "button"}
        %i.fa.fa-minus
  %button.btn.btn-outline-success.add{type: "button"}
    %i.fa.fa-plus

  .clearfix
    .float-end
      %button.btn.btn-light{"data-bs-dismiss": "modal", type: "button"} Cancel
      = f.submit("Save Changes", class: "btn btn-primary")
