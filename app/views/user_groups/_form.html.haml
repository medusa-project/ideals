// @param user_group [UserGroup]
// @param context [Symbol] `:new` or `:edit`

= form_for(user_group, remote: true) do |f|
  .error-messages
    - # populated via ajax by shared/_validation_messages.js.erb
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .clearfix
    .float-right
      %button.btn.btn-light{"data-dismiss": "modal", type: "button"} Cancel
      = f.submit(context == :new ? "Create User Group" : "Edit User Group",
                 class: "btn btn-primary")
