%div
  %h1.sr-only University Library, University of Illinois at Urbana-Champaign
  .d-flex.justify-content-between
    .table-row
      .table-cell
        %a.navbar-brand{href: "https://illinois.edu/"}
          = image_tag 'library_wordmark_horizontal_1.png',
            class: 'imark',
            alt: 'University of Illinois I-Mark'
      .table-cell
        %a{href: "https://www.library.illinois.edu"}
          = image_tag 'library_wordmark_horizontal_2.png',
            class: 'col-xs-12 banner-image-university',
            alt: 'University'
      .table-cell
        %a{href: "https://www.library.illinois.edu"}
          = image_tag 'library_wordmark_horizontal_3.png',
            class: 'col-xs-12 banner-image-library',
            alt: 'Library'
    .user-actions
      - if logged_in?
        - if current_user.sysadmin?
          .btn-group{role: "group"}
            %button#role-play-dropdown.btn.btn-sm.btn-default.dropdown-toggle{"aria-expanded": "false",
                                                                              "aria-haspopup": "true",
                                                                              "data-toggle": "dropdown",
                                                                              type: "button"}
              %i.far.fa-eye
              = Role.label(session[:role_limit])
            .dropdown-menu.dropdown-menu-right{"aria-labelledby": "role-play-dropdown"}
              = link_to Role.label(Role::NO_LIMIT),
                        url_for(role: Role::NO_LIMIT),
                        class: "dropdown-item"
              = link_to Role.label(Role::UNIT_ADMINISTRATOR),
                        url_for(role: Role::UNIT_ADMINISTRATOR),
                        class: "dropdown-item"
              = link_to Role.label(Role::COLLECTION_MANAGER),
                        url_for(role: Role::COLLECTION_MANAGER),
                        class: "dropdown-item"
              = link_to Role.label(Role::COLLECTION_SUBMITTER),
                        url_for(role: Role::COLLECTION_SUBMITTER),
                        class: "dropdown-item"
              = link_to Role.label(Role::LOGGED_IN),
                        url_for(role: Role::LOGGED_IN),
                        class: "dropdown-item"
              = link_to Role.label(Role::LOGGED_OUT),
                        url_for(role: Role::LOGGED_OUT),
                        class: "dropdown-item"
        .btn-group{role: "group"}
          %button#user-dropdown.btn.btn-sm.btn-default.dropdown-toggle{"aria-expanded": "false",
                                                                       "aria-haspopup": "true",
                                                                       "data-toggle": "dropdown",
                                                                       type: "button"}
            = icon_for(current_user)
            = current_user.username
          .dropdown-menu.dropdown-menu-right{"aria-labelledby": "user-dropdown"}
            = link_to "Dashboard", dashboard_path, class: "dropdown-item"
            = link_to "Account Info", user_path(current_user), class: "dropdown-item"
            = link_to "Log Out", logout_path, method: :delete, class: "dropdown-item"
      - elsif request.path != login_path
        %button.btn.btn-sm.btn-link{"data-target": "#non-netid-login-modal",
                                    "data-toggle": "modal",
                                    type: "button"}
          %i.fa.fa-sign-in-alt
          &nbsp;Log In