#login-carousel.carousel.slide{"data-bs-ride":     "carousel",
                               "data-bs-touch":    "false",
                               "data-bs-interval": "9999999999"}
  .carousel-inner
    - if current_institution&.saml_auth_enabled
      .carousel-item.openathens.active
        = render partial: "sessions/openathens_login_form"
    - if current_institution&.shibboleth_auth_enabled
      .carousel-item.shibboleth.active
        = render partial: "sessions/shibboleth_login_form"
    - if current_institution&.local_auth_enabled
      .carousel-item.local-credential.p-1{class: (current_institution&.sso_enabled?) ? "" : "active"}
        = render partial: "sessions/local_login_form"
