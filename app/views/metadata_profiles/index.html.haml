-# N.B.: this template must be kept aligned with institutions/_show_metadata_profiles_tab

- provide :body_id, "metadata_profiles"
- provide :title, "Metadata Profiles"

= hidden_field_tag :institution_id, current_institution.id

.btn-group.float-end{role: "group"}
  -# Add Profile button
  %button.btn.btn-light.add-metadata-profile{"data-bs-target": "#add-metadata-profile-modal",
                                             "data-bs-toggle": "modal",
                                             type:             "button"}
    %i.fa.fa-plus
    Add Profile

%h1 Metadata Profiles

- if @profiles.any? && !@profiles.find(&:institution_default) && policy(@profiles.first).edit?
  .alert.alert-warning
    = icon_for(:warning)
    None of these profiles are marked as default.
    This may cause problems with certain system features.
    Please edit one of them to mark it as default.

= render partial: "listing"

= render partial: "shared/xhr_modal",
         locals: { id: "add-metadata-profile-modal", title: "Add Metadata Profile" }

