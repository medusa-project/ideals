- provide :body_id, "list_invitees"
- provide :title, "Invitees"

= hidden_field_tag :institution_id, current_institution.id

- if policy(User).invite?
  .btn-group.float-end{role: "group"}
    -# Invite button
    %button.add-invitee.btn.btn-light{"data-bs-target": "#add-invitee-modal",
                                      "data-bs-toggle": "modal",
                                      type:             "button"}
      %i.fa.fa-plus
      Invite User

%h1
  Invitees
  %small
    in
    = current_institution.name

= render partial: "filter_form"

#invitees-xhr-content
  = render partial: "invitees",
           locals: { count:            @count,
                     current_page:     @current_page,
                     invitees:         @invitees,
                     permitted_params: @permitted_params,
                     window:           @window }

= render partial: "shared/xhr_modal",
         locals: { id: "add-invitee-modal", title: "Invite User" }
= render partial: "shared/xhr_modal",
         locals: { id: "reject-modal", title: "Reject Invitee" }