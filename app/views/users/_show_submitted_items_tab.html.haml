- if @items.count.positive?
  = form_tag(user_path(@user), method: :get, class: "filter") do
    .row.justify-content-between
      .col-4
        .mb-3.filter-field
          = hidden_field_tag("fq[]", "#{Item::IndexFields::SUBMITTER}:#{@user.id}")
          = filter_field(placeholder: "Filter")
      .col-4
        .input-group
          = sort_menu
  #items-xhr-content
    -# items/listing inserted here via XHR
- else
  This user has not submitted any items.
