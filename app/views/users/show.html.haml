- provide :body_id, "show_user"
- provide :title, @user.name

%h1
  =icon_for(@user)
  =@user.name

%ul.nav.nav-tabs{role: "tablist"}
  %li.nav-item
    %a#properties-tab.nav-link.active{"data-toggle": "tab",
                                      href: "#properties",
                                      role: "tab",
                                      "aria-controls": "properties",
                                      "aria-selected": "true"} Properties
  %li.nav-item
    %a#privileges-tab.nav-link{"data-toggle": "tab",
                               href: "#privileges",
                               role: "tab",
                               "aria-controls": "privileges",
                               "aria-selected": "false"} Privileges
  %li.nav-item
    %a#collections-tab.nav-link{"data-toggle": "tab",
                                href: "#collections",
                                role: "tab",
                                "aria-controls": "collections",
                                "aria-selected": "false"}
      Submittable Collections
      %span.badge.badge-pill.badge-secondary
        = @collections_count
  %li.nav-item
    %a#items-tab.nav-link{"data-toggle": "tab",
                          href: "#items",
                          role: "tab",
                          "aria-controls": "items",
                          "aria-selected": "false"}
      Submitted Items
      %span.badge.badge-pill.badge-secondary
        = @count
  %li.nav-item
    %a#submissions-tab.nav-link{"data-toggle": "tab",
                                href: "#submissions",
                                role: "tab",
                                "aria-controls": "submissions",
                                "aria-selected": "false"}
      Submissions In Progress
      %span.badge.badge-pill.badge-secondary
        = @submissions_count


.tab-content
  #properties.tab-pane.show.active{role: "tabpanel",
                                   "aria-labelledby": "properties-tab"}
    = render partial: "show_properties_tab", locals: { user: @user }

  #privileges.tab-pane{role: "tabpanel",
                       "aria-labelledby": "privileges-tab"}
    = render partial: "show_privileges_tab", locals: { user: @user }

  #collections.tab-pane{role: "tabpanel",
                        "aria-labelledby": "collections-tab"}
    = render partial: "show_collections_tab", locals: { user: @user }

  #items.tab-pane{role: "tabpanel", "aria-labelledby": "items-tab"}
    = render partial: "show_items_tab"

  #submissions.tab-pane{role: "tabpanel", "aria-labelledby": "submissions-tab"}
    = render partial: "show_submissions_tab"
