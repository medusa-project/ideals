-# frozen_string_literal: true
/
/ N.B.: this form is for editing only, as users can only be created by logging
/ in.
/
/ Required locals:
/
/ user [User]
/
= form_for(user.becomes(User), remote: true) do |f|
  .error-messages
    - # populated via ajax by shared/_validation_messages.js.erb

  .form-group
    = label_tag "Roles"
    = hidden_field_tag "user[role_ids][]"
    - Role.all.order(:name).each do |role|
      .form-check
        = check_box_tag "user[role_ids][]", role.id,
          f.object.roles.include?(role),
          id: "user_role_ids_#{role.id}",
          class: "form-check-input"
        = label_tag "user_role_ids_#{role.id}",
          role.name, class: "form-check-label"

  .clearfix
    .float-right
      %button.btn.btn-light{"data-dismiss": "modal", type: "button"} Cancel
      = f.submit("Edit User", class: "btn btn-primary")
