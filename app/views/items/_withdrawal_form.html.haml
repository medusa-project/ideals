-# frozen_string_literal: true
-#
-# Required arguments:
-#
-# item [Item]
-#

= form_for(item, remote: true) do |f|
  .error-messages
    -# populated via ajax by shared/_validation_messages.js.erb

  = f.hidden_field :stage, value: Item::Stages::WITHDRAWN

  .mb-3
    = f.label :stage_reason, "Reason"
    = f.text_area :stage_reason, class: "form-control"

  .clearfix
    .float-end
      %button.btn.btn-light{"data-bs-dismiss": "modal", type: "button"} Cancel
      = f.submit("Withdraw", class: 'btn btn-primary')
