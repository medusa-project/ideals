- provide :body_id, "list_items"

%h1 Items

= form_tag(items_path, method: :get) do
  .row
    .facets.col-sm-4.col-lg-3.col-xl-2
      = facets_as_cards(@facets, @permitted_params)

    .col-sm-8.col-lg-9.col.xl-10
      .row.justify-content-between
        .col-4
          .input-group.mb-3.filter-field
            = filter_field(icon: "fa fa-filter", submit_text: "Filter")
        .col-4
          .input-group
            = sort_menu(MetadataProfile.default)
      #listing
        = render partial: "listing"
