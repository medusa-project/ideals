.btn-group.float-right{role: "group"}
  -# Actions menu
  - if (@item.submitted? && policy(@item).approve?) || (@item.approved? && policy(@item).withdraw?) || (@item.withdrawn? && policy(@item).approve?)
    .btn-group{role: "group"}
      %button#actions.btn.btn-light.dropdown-toggle{"aria-expanded": "false",
                                                    "aria-haspopup": "true",
                                                    "data-toggle":   "dropdown",
                                                    type:            "button"}
        Actions
        .dropdown-menu.dropdown-menu-right{"aria-labelledby": "actions"}
          - if @item.submitted? || @item.withdrawn?
            = link_to(item_approve_path(@item), class:          "dropdown-item",
                                                method:         :patch,
                                                "data-confirm": "Are you sure you want to approve this item?") do
              %i.fa.fa-check
              Approve
            - if !@item.withdrawn?
              = link_to(item_reject_path(@item), class:          "dropdown-item",
                                                 method:         :patch,
                                                 "data-confirm": "Are you sure you want to reject this item?") do
                %i.fa.fa-times
                Reject
          - elsif @item.approved?
            %a.dropdown-item.withdraw{"data-toggle": "modal",
                                      href: "#",
                                      "data-item-id": @item.id,
                                      "data-target":  "#withdraw-modal"}
              %i.fa.fa-undo
              Withdraw

          - if policy(@item).delete?
            = link_to(item_delete_path(@item), class:          "dropdown-item",
                                               method:         :post,
                                               "data-confirm": "Are you sure you want to delete this item?") do
              %i.fa.fa-trash
              Delete

  -# Manage Files button
  - if policy(@item).upload_bitstreams? && !@item.withdrawn?
    %button.btn.btn-light.manage-item-files{"data-item-id": @item.id,
                                            "data-target":  "#manage-item-files-modal",
                                            "data-toggle":  "modal",
                                            role:           "button"}
      %i.fas.fa-upload
      Manage Files&hellip;

= render partial: "shared/ajax_modal",
         locals: { id: "withdraw-modal",
                   title: "Withdraw" }
