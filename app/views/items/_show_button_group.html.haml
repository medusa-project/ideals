.btn-group.float-right{role: "group"}
  -# Actions menu
  - if @item.submitted? && policy(@item).approve?
    .btn-group{role: "group"}
      %button#actions.btn.btn-light.dropdown-toggle{"aria-expanded": "false",
                                                    "aria-haspopup": "true",
                                                    "data-toggle": "dropdown",
                                                    type: "button"}
        Actions
      .dropdown-menu.dropdown-menu-right{"aria-labelledby": "actions"}
        = link_to(item_approve_path(@item), class: 'dropdown-item',
                                            method: :patch,
                                            "data-confirm": "Are you sure you want to approve this item?") do
          %i.fa.fa-check
          Approve
        = link_to(item_reject_path(@item), class: 'dropdown-item',
                                           method: :patch,
                                           "data-confirm": "Are you sure you want to reject this item?") do
          %i.fa.fa-times
          Reject
  -# Upload File button
  - if policy(@item).upload_bitstreams?
    %button.btn.btn-light.upload-item-files{"data-item-id": @item.id,
                                          "data-target": "#upload-item-files-modal",
                                          "data-toggle": "modal",
                                          role: "button"}
      %i.fas.fa-upload
      Upload File&hellip;
  -# Delete button
  - if !@item.exists_in_medusa? && policy(@item).destroy?
    = link_to(item_path(@item), class: 'btn btn-danger',
                                    method: :delete,
                                    "data-confirm": "Are you sure you want to delete this item?") do
      %i.fa.fa-trash
      Delete