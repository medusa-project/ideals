.btn-group.float-right{role: "group"}
  - if policy(@resource).edit_properties?
    // Edit button
    .btn-group{role: "group"}
      %button#edit-dropdown.btn.btn-light.dropdown-toggle{type: "button",
                                                          "data-toggle": "dropdown",
                                                          "aria-haspopup": true,
                                                          "aria-expanded": false}
        %i.fas.fa-pencil-alt
        Edit
      .dropdown-menu.dropdown-menu-right{"aria-labelledby": "edit-dropdown"}
        - if policy(@resource).edit_properties?
          %a.dropdown-item.edit-item-properties{"data-item-id": @resource.id,
                                                "data-target": "#edit-item-properties-modal",
                                                "data-toggle": "modal",
                                                role: "button"}
            %i.fa.fa-info-circle
            Properties

  // Delete button
  -if policy(@resource).destroy?
    = link_to(item_path(@resource), class: 'btn btn-danger',
                                    method: :delete,
                                    "data-confirm": "Are you sure you want to delete this item?") do
      %i.fa.fa-trash
      Delete