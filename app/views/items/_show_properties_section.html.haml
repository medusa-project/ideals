- if policy(@item).show_properties?
  %h2.mt-5
    Properties
    - if policy(@item).edit_properties?
      %button.btn.btn-light.edit-item-properties{"data-item-id": @item.id,
                                                 "data-target": "#edit-item-properties-modal",
                                                 "data-toggle": "modal",
                                                 role: "button"}
        %i.fas.fa-pencil-alt
        Edit

  %dl.properties
    %dt Handle.net URI
    %dd
      - if @item.handle
        = link_to(@item.handle.handle_net_url, @item.handle.handle_net_url)
      - else
        None
    %dt Local Handle URI
    %dd
      - if @item.handle
        = link_to(@item.handle.url, @item.handle.url)
      - else
        None
    - if @item.submitter
      - submitter = @item.submitter.becomes(User)
      %dt Submitter
      %dd
        - if policy(submitter).show?
          = link_to(submitter.name, submitter)
        - else
          = submitter.name
    %dt Lifecycle Stage
    %dd
      = Item::Stages.constants.find{ |c| @item.stage == Item::Stages.const_get(c) }&.to_s&.downcase&.capitalize
      - if @item.stage_reason.present?
        %br
        = @item.stage_reason
    %dt Discoverable
    %dd= boolean(@item.discoverable, style: :word)
    %dt User Groups Allowed to Access Files
    %dd
      - if @item.bitstream_authorizations.any?
        %ul
          - @item.bitstream_authorizations.each do |auth|
            %li= link_to(auth.user_group.name, auth.user_group)
      - else
        Any
    %dt Created
    %dd= local_time @item.created_at
    %dt Last Updated
    %dd= local_time @item.updated_at
