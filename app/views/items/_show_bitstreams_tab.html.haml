%ul.list-unstyled
  - @bitstreams.each do |bs|
    %li.media.mb-3
      .mr-3.type-icon
        = icon_for(bs)
      .media-body
        %h5.mt-0.mb-1
          = bs.original_filename
          - if bs.exists_in_staging || bs.medusa_uuid.present?
            = link_to(item_bitstream_data_path(@item, bs), class: "btn btn-sm btn-outline-primary") do
              %i.fa.fa-download
              Download
        - if policy(@item).show_sysadmin_content?
          .row
            .col-md-4
              %dl
                %dt Media Type
                %dd= bs.media_type
                %dt Size
                %dd= bs.length
            .col-md-8
              %dl
                - if bs.staging_key
                  %dt Staging Key
                  %dd= bs.staging_key
                - if bs.medusa_uuid
                  %dt Medusa Key
                  %dd= bs.medusa_key
                  %dt Medusa UUID
                  %dd= bs.medusa_uuid
        - else
          %span
          - if bs.media_type.present?
            = bs.media_type
            &bull;
          = number_to_human_size(bs.length)
