.btn-group.float-right{role: "group"}
  - if policy(@unit).edit_access?
    %button.btn.btn-light.edit-unit-access{"data-unit-id": @unit.id,
                                           "data-target": "#edit-unit-access-modal",
                                           "data-toggle": "modal",
                                           role: "button"}
      %i.fas.fa-pencil-alt
      Edit Access

%dl
  %dt Direct Administrators
  %dd
    - if @unit.administering_users.any?
      %ul
        - @unit.administering_users.each do |user|
          %li= link_to(raw("#{user.name}#{user == @unit.primary_administrator ? " <span class=\"badge badge-primary\">PRIMARY</span>" : ""}"),
              "mailto:#{user.email}")
    - else
      None
  %dt Effective Administrators (including administrators of parent units)
  %dd
    - admins = @unit.all_administrators
    - if admins.any?
      %ul
        - admins.each do |user|
          %li= link_to(user.name, "mailto:#{user.email}")
    - else
      None
