%h1
  =icon_for(@resource)
  =@resource.title

-if @resource.units.count.positive?
  %h2 Sub-Units
  =render partial: "units/listing", locals:{resources: @resource.units}
-if @resource.collections.count.positive?
  %h2 Collections
  =render partial: "collections/listing", locals:{resources: @resource.collections}

