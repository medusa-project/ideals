<% # This file contains all of the institution-specific style overrides. %>

<% if @institution.banner_image_filename %>
  body#welcome #welcome-image {
    background-image: url("<%= raw(@institution.banner_image_url) %>") !important;
  }
<% end %>

<% # primary_color %>

.badge-primary {
    background-color: <%= h @institution.primary_color %>;
    color: <%= ColorUtils.optimize_text_contrast(@institution.primary_color) %>;
}
.bg-primary .card-header, .bg-primary .card-body {
    background-color: <%= h @institution.primary_color %>;
    color: <%= ColorUtils.optimize_text_contrast(@institution.primary_color) %>;
}
.bg-primary code {
    color: inherit;
}
.btn-primary, .btn-primary.disabled, .btn-primary:disabled {
  background-color: <%= h @institution.primary_color %>;
  border-color: transparent;
  color: <%= ColorUtils.optimize_text_contrast(@institution.primary_color) %> !important;
}
.btn-outline-primary {
    border-color: <%= h @institution.primary_color %>;
}
.btn-outline-primary.active {
    border-color: <%= h @institution.primary_color %> !important;
    background-color: <%= h @institution.primary_color %> !important;
}
.nav-pills .nav-link.active {
    background-color: <%= h @institution.primary_color %>;
    color: <%= ColorUtils.optimize_text_contrast(@institution.primary_color) %>;
}
.page-item.active .page-link {
    background-color: <%= h @institution.primary_color %>;
    border: 1px solid <%= h @institution.primary_color %>;
}
.progress-bar {
    background-color: <%= h @institution.primary_color %>;
    color: <%= ColorUtils.optimize_text_contrast(@institution.primary_color) %>;
}

<% # primary_hover_color %>

.btn-primary:hover, .btn-outline-primary:hover {
  background-color: <%= h @institution.primary_hover_color %>;
  border-color: transparent;
}

<% # link_color %>

a, a.page-link, .btn-outline-primary { color: <%= h @institution.link_color %>; }

<% # link_hover_color %>

a:hover, a.page-link:hover { color: <%= h @institution.link_hover_color %>; }

<% # active_link_color %>

a:active { color: <%= h @institution.active_link_color %> }
a.dropdown-item:active {
    background-color: <%= h @institution.active_link_color %> !important;
    color: <%= ColorUtils.optimize_text_contrast(@institution.active_link_color) %>;
}

<% # header_background_color %>

header > div:first-child {
  background-color: <%= h @institution.header_background_color %>;
  color: <%= ColorUtils.optimize_text_contrast(@institution.header_background_color) %>;
}
header > div:first-child .btn {
  color: <%= ColorUtils.optimize_text_contrast(@institution.header_background_color) %>;
}

<% # footer_background_color %>

footer .info-area {
  background-color: <%= h @institution.footer_background_color %>;
  color: <%= ColorUtils.optimize_text_contrast(@institution.footer_background_color) %>;
}
