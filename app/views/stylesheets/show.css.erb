<% # This file contains all of the institution-specific style overrides. %>

<% if @institution.banner_image_filename %>
  body#welcome #welcome-image {
    background-image: url("<%= raw(@institution.banner_image_url) %>") !important;
  }
<% end %>

<% # primary_color %>

.btn-primary {
  background-color: <%= h @institution.primary_color %>;
  border-color: transparent;
}
.badge-primary { background-color: <%= h @institution.primary_color %>; }
.bg-primary .card-header { background-color: <%= h @institution.primary_color %>; }
.nav-pills .nav-link.active { background-color: <%= h @institution.primary_color %>; }
.progress-bar { background-color: <%= h @institution.primary_color %>; }

<% # primary_hover_color %>

.btn-primary:hover {
  background-color: <%= h @institution.primary_hover_color %>;
  border-color: transparent;
}

<% # link_color %>

a { color: <%= h @institution.link_color %>; }

<% # link_hover_color %>

a:hover { color: <%= h @institution.link_hover_color %>; }

<% # active_link_color %>

a:active { color: <%= h @institution.active_link_color %> }
a.dropdown-item:active { background-color: <%= h @institution.active_link_color %> !important; }

<% # header_background_color %>

header > div:first-child {
  background-color: <%= h @institution.header_background_color %>;
}

<% # footer_background_color %>

footer .info-area {
  background-color: <%= h @institution.footer_background_color %>;
}
