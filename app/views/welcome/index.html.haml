- provide :body_id, "welcome"
- provide :title, "Welcome"

= google_analytics_tags

#welcome-image
  = form_tag(search_path, method: :get) do
    .input-group.mb-4
      = search_field_tag(:q, '',
                         placeholder:  raw("Search across #{number_with_delimiter(@item_count)} items&hellip;"),
                         'aria-label': 'Search',
                         class:        'form-control form-control-lg')
      %input{type: "submit", value: "Search", class: "btn btn-primary"}
  = link_to("Advanced Search", search_path(tab: "advanced-search"),
            id: "advanced-search-link")

= render partial: "shared/flashes"

- if logged_in? || !current_institution.auth_enabled?
  = render partial: "welcome"
- else
  .row
    .col-8
      = render partial: "welcome"
    .col-4
      .d-grid{style: "margin-top: 4em"}
        %button.btn.btn-lg.btn-primary.btn-block{"data-bs-target": "#login-modal",
                                                 "data-bs-toggle": "modal",
                                                 type:             "button"}
          %i.fa.fa-sign-in-alt
          &nbsp;Log In
