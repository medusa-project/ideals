.row
  .col-sm-6
    %h3 Import Details
    %dl
      %dt Format
      %dd= Import::Format.to_s(@import.format)
      %dt Database ID
      %dd= @import.id
      %dt User
      %dd
        - if @import.user
          = link_to(@import.user) do
            = icon_for(@import.user)
            = @import.user.name
        - else
          Unknown
      %dt Collection
      %dd= link_to(@import.collection.title, @import.collection)
      %dt Created
      %dd= local_time(@import.created_at)

  .col-sm-6
    %h3 Task Details
    - if @import.task
      = render partial: "tasks/show", locals: { task: @import.task }
    - else
      %p Task not created yet.

- if @import.files&.any?
  %h3 Files
  %dl
    %dt Files
    %dd
      %pre= @import.files&.join("\n")