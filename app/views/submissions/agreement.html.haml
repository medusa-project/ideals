- provide :body_id, "agreement"

%h1 Deposit

- if @submissions.any?
  .card.text-white.bg-info.mb-3
    .card-header Submissions In Progress
    .card-body
      %p= "You have #{pluralize(@submissions.length, "submission")} in progress:"
      %ul
        - @submissions.each do |item|
          %li
            - if item.primary_collection
              = raw "Started #{local_time_ago(item.created_at)} in #{item.primary_collection.title}"
            - else
              = raw "Started #{local_time_ago(item.created_at)} (collection not selected)"
            = link_to("Continue", edit_submission_path(item), class: "btn btn-outline-light btn-sm")
      %button.begin-submission.btn.btn-outline-light Begin a new submission

