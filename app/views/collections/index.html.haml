%h1 Collections
.row
  .col-md-2.col-md-offset-10
    = link_to 'New Collection', new_collection_path, class: "btn btn-primary btn-block idb"
%table.table
  %thead
    %tr.row
      %th.col-md-3 Title
      %th.col-md-5 Description
      %th.col-md-2
      %th.col-md-2
      %th.col-md-2

  %tbody
    - @collections.each do |collection|
      %tr.row
        %td.col-md-3
          = collection.title
        %td.col-md-5
          = collection.description
        %td.col-md-2
          = link_to 'Show', collection, class: "btn btn-success btn-block idb"
        %td.col-md-2
          = link_to 'Edit', edit_collection_path(collection), class: "btn btn-info btn-block idb"
        %td.col-md-2
          = link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-block idb"


