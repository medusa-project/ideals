- provide :body_id, "show_collection"
- provide :title, @collection.title

= hidden_field_tag :collection_id, @collection.id

= render partial: "show_button_group"

%h1.mb-3
  = icon_for(@collection)
  = @collection.title

.d-flex
  .nav.flex-column.nav-pills.me-3{role:               "tablist",
                                  "aria-orientation": "vertical"}
    %button#items-tab.nav-link.active{"data-bs-target": "#items-tab-content",
                                      "data-bs-toggle": "pill",
                                      role:             "tab",
                                      "aria-controls":  "items-tab-content",
                                      "aria-selected":  "true"}
      = icon_for(Item)
      Items
    - if policy(@collection).show_review_submissions?
      %button#review-submissions-tab.nav-link{"data-bs-target": "#review-submissions-tab-content",
                                              "data-bs-toggle": "pill",
                                              role:             "tab",
                                              "aria-controls":  "review-submissions-tab-content",
                                              "aria-selected":  "false"}
        %i.fa.fa-tasks
        Review Submissions
        - if @review_count > 0
          %small.rounded-pill.badge-danger= @review_count
    - if policy(@collection).show_about?
      %button#about-tab.nav-link{"data-bs-target": "#about-tab-content",
                                 "data-bs-toggle": "pill",
                                 role:             "tab",
                                 "aria-controls":  "about-tab-content",
                                 "aria-selected":  "false"}
        = icon_for(:info)
        About This Collection
    - if policy(@collection).show_statistics?
      %button#statistics-tab.nav-link{"data-bs-target":     "#statistics-tab-content",
                                      "data-bs-toggle":     "pill",
                                      "data-collection-id": @collection.id,
                                      role:                 "tab",
                                      "aria-controls":      "statistics-tab-content",
                                      "aria-selected":      "false"}
        %i.fa.fa-chart-bar
        Statistics
    - if policy(@collection).show_access?
      %button#access-tab.nav-link{"data-bs-target": "#access-tab-content",
                                  "data-bs-toggle": "pill",
                                  role:             "tab",
                                  "aria-controls":  "access-tab-content",
                                  "aria-selected":  "false"}
        %i.fa.fa-users
        Access

  .tab-content.w-100
    #items-tab-content.tab-pane.fade.show.active{role: "tabpanel",
                                                 "aria-labelledby": "items-tab"}
      = spinner
    - if policy(@collection).show_about?
      #about-tab-content.tab-pane.fade{role: "tabpanel",
                                       "aria-labelledby": "about-tab"}
        = spinner
    - if policy(@collection).show_statistics?
      #statistics-tab-content.tab-pane.fade{role: "tabpanel",
                                            "aria-labelledby": "statistics-tab"}
        = spinner
    - if policy(@collection).show_review_submissions?
      #review-submissions-tab-content.tab-pane.fade{role: "tabpanel",
                                                    "aria-labelledby": "review-submissions-tab"}
        = spinner
    - if policy(@collection).show_access?
      #access-tab-content.tab-pane.fade{role: "tabpanel",
                                        "aria-labelledby": "access-tab"}
        = spinner

= render partial: "collections/add_modal",
         locals: { primary_unit: @collection.primary_unit,
                   parent: @collection,
                   title: "Add Child Collection" }
= render partial: "shared/ajax_modal",
         locals: { id: "download-files-modal",
                   title: "Download All Files" }
= render partial: "shared/ajax_modal",
         locals: { id: "edit-collection-properties-modal",
                   title: "Edit Properties" }
= render partial: "shared/ajax_modal",
         locals: { id: "edit-collection-membership-modal",
                   title: "Change Collection Membership" }
= render partial: "shared/ajax_modal",
         locals: { id: "edit-unit-membership-modal",
                   title: "Change Unit Membership",
                   size: :lg }

= include_chart_library