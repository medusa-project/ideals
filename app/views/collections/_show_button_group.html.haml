.btn-group.float-right{role: "group"}
  // Edit button
  -if policy(@resource).edit?
    %button.btn.btn-light.edit-collection{"data-collection-id": @resource.id,
                                          "data-target": "#edit-collection-modal",
                                          "data-toggle": "modal",
                                          type: "button"}
      %i.fas.fa-pencil-alt
      Edit
  // Delete button
  -if policy(@resource).destroy?
    = link_to(collection_path(@resource), class: 'btn btn-danger',
                                          method: :delete,
                                          "data-confirm": "Are you sure you want to delete this collection?") do
      %i.fa.fa-trash
      Delete